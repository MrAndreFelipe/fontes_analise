# ==========================================
# ORACLE DATABASE CONFIGURATION
# ==========================================
# Oracle database connection for Text-to-SQL primary route
ORACLE_HOST=192.168.0.175
ORACLE_PORT=1521
ORACLE_USER=industrial
ORACLE_PASSWORD=your_password_here

# Use SERVICE_NAME (recommended) OR SID (choose one)
ORACLE_SERVICE_NAME=dbprod
# ORACLE_SID=dbprod

# ==========================================
# POSTGRESQL CONFIGURATION
# ==========================================
# PostgreSQL database for embeddings fallback route
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=cativa_rag_db
PG_USER=cativa_user
PG_PASSWORD=your_password_here

# ==========================================
# OPENAI API CONFIGURATION
# ==========================================
# OpenAI API for LLM operations (Text-to-SQL generation and embeddings)
OPENAI_API_KEY=sk-proj-your_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# ==========================================
# EVOLUTION API (WhatsApp)
# ==========================================
# Evolution API configuration for WhatsApp integration
EVOLUTION_API_URL=http://10.1.200.22:8081
EVOLUTION_API_KEY=your_api_key_here
EVOLUTION_INSTANCE=TCC_Andre_e_Jean

# ==========================================
# WEBHOOK CONFIGURATION
# ==========================================
# Webhook server configuration
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5000
WEBHOOK_PUBLIC_URL=https://your-subdomain.ngrok.io

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# ENVIRONMENT
# ==========================================
# Environment mode (development, production)
ENVIRONMENT=production

# ==========================================
# OPTIONAL: DEBUG MODE
# ==========================================
# Enable debug mode (true/false)
DEBUG=false
